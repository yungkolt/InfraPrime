{
  "name": "infraprime-frontend",
  "version": "1.0.0",
  "description": "Frontend for InfraPrime Three-Tier Application",
  "main": "src/index.html",
  "scripts": {
    "start": "live-server src --port=3000 --host=0.0.0.0",
    "build": "npm run copy-files && npm run minify",
    "copy-files": "mkdir -p dist && cp -r src/* dist/",
    "minify": "html-minifier --input-dir dist --output-dir dist --file-ext html --remove-comments --collapse-whitespace && uglifyjs dist/app.js -o dist/app.js && cleancss -o dist/styles.css dist/styles.css",
    "test": "jest",
    "lint": "eslint src/",
    "serve": "live-server dist --port=3000",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "nodemon --watch src --ext html,css,js --exec \"npm run build\"",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "frontend",
    "javascript",
    "html",
    "css",
    "three-tier",
    "cloud"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.0.0",
    "html-minifier": "^4.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "live-server": "^1.2.2",
    "nodemon": "^2.0.20",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
